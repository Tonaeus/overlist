{
  "compilerOptions": {
    /* Basic Settings */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    /* Strict Settings */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    
    /* Output Settings */
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
  },
  "include": ["src/**/*"],
}
